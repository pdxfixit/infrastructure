#!/bin/bash
# Export all databases

if [ ! -d /var/db/ ] ; then
  mkdir -p /var/db/
fi
cd /var/db/
<% @databases.each do |database, setting| -%>

# <%= database %>
FILE="<%= database %>.$(date +%Y%m%d%H%I%S).sql"
echo "Exporting <%= database %> to $FILE..."
mysqldump --single-transaction -h <%= setting["host"] %> -u <%= setting["user"] %> -p'<%= setting["password"] %>' <%= database %> > ${FILE}
<% end -%>
